@{
    ViewBag.Title = "Minesweeper";

}

<h2>Custom</h2>

@using (Html.BeginForm("StartGame", "Minesweeper", FormMethod.Get, new { @class = "form-horizontal", role = "form", onSubmit = "return formValidation();" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new game.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-2">Rows</label>
        <div class="col-md-10">
            <input class="form-control" type="number" value="10" name="rows" id="rows" min="1" max="20" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2">Columns</label>
        <div class="col-md-10">
            <input class="form-control" type="number" value="10" name="columns" id="columns" min="1" max="20" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2">Mines</label>
        <div class="col-md-10">
            <input class="form-control" type="number" value="10" name="mines" id="mines" min="0" max="400" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
}

@section Scripts {
    <script type="text/javascript">
        function formValidation() {
            var mines = $("#mines").val();
            var rows = $("#rows").val();
             var columns = $("#columns").val();
            if (mines >= rows * columns) {
                alert("That's too many mines!");
                return false;
            }
            return true;
        }
    </script>

}